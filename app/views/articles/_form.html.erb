<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content, class: "textarea textarea-bordered" %>
  </div>

  <div>
    <%= form.label :creator_id, style: "display: block" %>
    <%= form.collection_select :creator_id, User.all, :id, :name, {},  class: "input input-bordered rounded-md" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
